<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout-->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <Button

            android:text="@string/button_label_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_toast"
            android:textColor="@color/black"
            app:backgroundTint="@color/purple_200"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="showToast"

    />

    <TextView
            android:text="@string/count_initial_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_count"
            android:textSize="160sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:background="#FFFF00"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/button_toast"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />
<!--    android:layout_alignParentStart attribute makes the "start" edge of this view
match the start edge of the parent. -->
<!--    The android:layout_alignParentLeft aligns the view to the left side of the RelativeLayout parent view group.-->
    <Button
            android:text="@string/button_label_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/button_count" app:backgroundTint="@color/purple_200"
            android:onClick="countUp"
            android:layout_below="@+id/show_count"
            android:layout_centerHorizontal="true"
    />
    <Button

            android:text="Zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_zero"
            android:textColor="@color/black"
            app:backgroundTint="@color/purple_200"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="clear"
            android:layout_below="@+id/button_count"
            android:layout_centerHorizontal="true"

    />
<!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</RelativeLayout>
